<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>


<VBox 
    xmlns="http://javafx.com/javafx/8" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="helloworldfx.CounterController"
    spacing="10"
    alignment="CENTER">
        <Label fx:id="counterLabel" text="0" style="-fx-font-size: 24px;" />
        <Button text="Incrementar" onAction="#handleIncrement" />
        <Button text="Resetar" onAction="#handleReset" />
</VBox>